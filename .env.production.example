# Production Environment Variables
NODE_ENV=production
PORT=3001

# API URLs (update with your domain)
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_TOOLS_API_URL=https://your-domain.com/api/tools

# Security
JWT_SECRET=your-very-secure-secret-key-here
SESSION_SECRET=another-secure-secret-key

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database (choose one)
# Option 1: PostgreSQL
DATABASE_URL=postgres://user:password@host:5432/family_dashboard

# Option 2: MongoDB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/family_dashboard

# Option 3: AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=family-dashboard-data
AWS_REGION=us-east-1

# Optional: Error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X