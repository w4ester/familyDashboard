# Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_MCP_SERVER_URL=http://localhost:3001
REACT_APP_MCP_API_KEY=your_secure_api_key_here

# AI Provider Keys (Optional - only add the ones you want to use)
REACT_APP_OPENAI_API_KEY=
REACT_APP_CLAUDE_API_KEY=
REACT_APP_OLLAMA_URL=http://localhost:11434

# Feature Flags
REACT_APP_ENABLE_AI=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_MEAL_PLANNING=false
REACT_APP_ENABLE_REWARDS=false

# Storage Configuration
REACT_APP_STORAGE_TYPE=mcp # Options: localStorage, mcp, cloud
REACT_APP_SYNC_INTERVAL=30000 # 30 seconds

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=warn # Options: error, warn, info, debug

# Security
REACT_APP_ENABLE_AUTH=false
REACT_APP_SESSION_TIMEOUT=3600000 # 1 hour

# UI Configuration
REACT_APP_DEFAULT_THEME=light # Options: light, dark, auto
REACT_APP_ENABLE_ANIMATIONS=true
